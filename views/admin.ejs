<%- include('./partials/header') %> <% if(message.length>0){ %>
<div
  class="flashMessage absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-blue-500"
>
  <span class="inline-block mt-1 mb-1 text-white"> <%= message[0] %> </span>
</div>
<% } %>
<div class="w-full h-screen flex items-start px-20 py-20">
  <div class="w-[25%] flex h-screen flex-col items-start">
    <div class="flex flex-col">
      <a class="block w-fit mb-2" href="">All Products</a>
      <a class="block w-fit mb-2" href="/products/create">Create new product</a>
    </div>
  </div>
  <div class="w-[75%] flex flex-col gap-5 h-screen">
    <a class="text-red-500" href="">Delete all</a> 
    <div class="productcontainer flex flex-wrap gap-5">
      <% products.forEach((product) => { %>
        <div class="flex items-start max-h-fit-content gap-5 text-[<%= product.textColor %>]">
          <div class="w-60 bg-[<%= product.bgColor %>]">
            <div class="w-full h-52 flex justify-center items-center">
              <img class="w-[70%] h-[70%] object-contain" src="/assets/images/<%= product.image %>" alt="" />
            </div>
            <div class="flex justify-between items-center px-4 py-4 bg-[<%= product.panelColor %>]">
              <div>
                <h3><%= product.name %></h3>
                <h4>â‚¹ <%= product.price %></h4>
              </div>
              <a
                class="w-7 max-h-7 flex items-center justify-center rounded-full bg-white"
                href=""
              >
                <i class="ri-add-line"></i>
              </a>
            </div>
          </div>
        </div>
        <% }); %>
    </div>
  </div>
</div>
<%- include('./partials/footer') %>
